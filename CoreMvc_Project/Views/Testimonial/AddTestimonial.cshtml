@model EntityLayer.Concrete.Testimonial

@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_New_AdminLayout.cshtml";
}


@using (Html.BeginForm("AddTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Yeni Deneyim Ekleme Paneli</p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Ad Soyad</label>
                        <input type="text" class="form-control" name="ClieantName" placeholder="Ad Soyad">
                    </div>
                    <div class="form-group">
                        <label>Şirket</label>
                        <input type="text" class="form-control" name="Company" placeholder="Şirket">
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" name="Title" placeholder="Başlık">
                    </div>
                    <div class="form-group">
                        <label>Görsel</label>
                        <input type="text" class="form-control" name="ImageUrld" placeholder="Görsel Url">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" name="Comment" rows="6" placeholder="Açıklama Giriniz"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>

}

