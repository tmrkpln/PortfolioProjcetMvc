@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_New_AdminLayout.cshtml";
}



@using (Html.BeginForm("AddService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Hizmet Ekleme Paneli</p>
                <form class="forms-sample">
                    <br />
                    @Html.Label("Hizmet Başlığı")
                    <input type="text" name="Title" class="form-control" />
                    <br />
                    @Html.Label("Resim Yolu")
                    <input type="text" name="Value" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
}

