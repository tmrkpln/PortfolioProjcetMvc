@model EntityLayer.Concrete.SocialMedia


@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_New_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditSocialMedia", "SocialMedia", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Hesap Düzenleme Paneli</p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x => x.SocialMediaID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        <label>Url</label>
                        @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>İcon</label>
                        @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Durum</label>
                        <select class="form-control" asp-for="Satus">
                            <option value="true">Aktif</option>
                            <option value="false">Pasif</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-danger">İptal</button>
                </form>
            </div>
        </div>
    </div>
}

